{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "overrides": [
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "indent": [
          "error",
          2
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "arrow-spacing": "error",
      "no-trailing-spaces": "error",
      "spaced-comment":"error",
      "no-multi-spaces":"error",
      "key-spacing": "error",
      "comma-spacing": "error",
      "semi-spacing": "error",
      "space-before-blocks": "error",
      "eol-last": ["error", "always"]
  }
}
